{
  "name": "deriv-last-digit-bot",
  "version": "1.0.0",
  "description": "Advanced Deriv Last Digit trading bot with ML and backtesting",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
