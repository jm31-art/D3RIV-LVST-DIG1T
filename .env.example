# Deriv Bot Configuration
# Copy this file to .env and fill in your values

# Trading Mode: 'demo' or 'live'
TRADING_MODE=demo

# Demo Account API Token (for testing with virtual money)
DEMO_API_TOKEN=your_demo_api_token_here

# Live Account API Token (for real money trading - use with caution!)
LIVE_API_TOKEN=your_live_api_token_here

# Deriv App ID (usually 1089 for most applications)
DERIV_APP_ID=1089

# Web Server Port (optional, defaults to 3000)
PORT=3000